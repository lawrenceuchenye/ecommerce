*{
  margin:0;
  padding:0;
  font-family:serif;
}


.container .nav-bar{
  position:relative;
  display:flex;
  width:100%;
  background:#000;
}


.container .nav-bar p{
  font-family:cursive serif;
  color:#fff;
  position:relative;
  top:35px;
  font-size:30px;
}

.container .nav-bar ul{
  list-style:none;
  flex:1;
  text-align:right;
  margin:10px;
  padding-right:30px;
  padding-top:25px;
}

.container .nav-bar ul li{
  display:inline-block;
  margin-left:15px;
  position:relative;
}

.container .nav-bar ul li a:after{
 width:0;
 height:3px;
 background:#fff;
 content:'';
 display:block;
 position:absolute;
 bottom:-6px;
 transition:0.5s;
}

.container .nav-bar ul li:nth-child(6) a:after{
  display:none;
}

.container .nav-bar ul li a:hover:after{
 width:100%;
}

.container .nav-bar ul li a{
  text-decoration:none;
  color:white;
  font-family:serif;
  font-weight:500;
  font-size:20px;
  padding:5px;
  transition:0.5s;
}

.container .nav-bar .logout-btn{
 background:#cf1733;
 padding:5px;
 border-radius:5px;
}

.container .nav-bar img:nth-child(1){
  width:80px;
  height:80px;
  padding-left:8px;
  padding-top:7px;
  padding-bottom:8px;
}

.container .terms{
  padding:0px;
  height:10vh;
  background:#000;
  text-align:center;
  position:absolute;
  bottom:0px;
  width:100%;
}


.container .terms a{
  position:relative;
  color:white;
  font-size:15px;
  font-family:serif;
  font-weight:700;
  text-decoration:none;
  top:50%;
}

#menu{
  display:none;
}

.container .utils{
  background:#0e0a31;
  z-index:3;
  position:absolute;
  transition:0.8s;
  right:0;
  height:0vh;
  width:40%;
  overflow:hidden;
}


.container .utils #exit{
  top:10px;
  right:10px;
  position:absolute;
}

.container .utils ul{
  padding-top:50px;
  padding-left:10px;
  width:100%;
  text-align:center;
}


.container .utils ul li{
  width:85%;
  margin:6% auto;
  display:flex;
  justify-content:center;
  align-items:center;
  background:#000;
  position:relative;
  left:-5px;
  padding:2px;
  border-radius:3px;
}

#logout{
 background:#cf1733;
}

.container .utils ul li img{
  padding:5px;
}

.container .utils ul li a{
  color:white;
  text-decoration:none;
  font-size:15px;
}


.container .utils ul li:nth-child(1) a{
  margin-left:20px;
}

.container .utils ul li:nth-child(2) a{
  margin-left:22px;
}

.container .utils ul li:nth-child(3) a{
  margin-left:7px;
}

.container .utils ul li:nth-child(4) a{
  margin-left:12px;
}

.container .utils ul li:nth-child(5) a{
  margin-left:19px;
}

.container .utils ul li:nth-child(6) a{
  margin-left:19px;
}

@media only screen and (max-width:700px){
  .container .nav-bar{
   background-color:#000;
  }
  
  .container .nav-bar img:nth-child(1){
    width:40px;
    height:40px;
    padding-top:0px;
  }
  
  #menu{
    display:block;
  }
  
  .container .nav-bar #menu{
    position:absolute;
    top:10px;
    right:10px;
  }
  
  .container .nav-bar ul{
    display:none;
  }
  
  .container .nav-bar p{
   top:10px;
   font-size:20px;
  }
}
